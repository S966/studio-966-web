!!! 5
%html
  %head
    %meta{ charset: "utf-8" }
    
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    
    -# Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Usman Bashir, your galactic alien friend!"

    -# Set the viewport width to device width for mobile
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

    %link{ rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,400italic", type: "text/css" }
    %link{ rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Lora:700italic", type: "text/css" }
    
    = stylesheet_link_tag "application"
  
  %body{ class: page_classes }
    = partial "layouts/unsupported_browsers"
    = partial "layouts/header"
    = yield
    = partial "layouts/footer"
